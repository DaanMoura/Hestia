<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".FeedListaActivity"
        android:background="@color/grayLight">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/googlesans"
            android:text="@string/meu_feed"
            android:textColor="@color/primaryText"
            android:textSize="28sp"
            android:padding="8dp"
            android:layout_marginStart="32dp"/>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="32dp"
            android:paddingBottom="8dp"
            android:orientation="vertical"
            android:elevation="4dp"
            android:background="@color/white"
            tools:targetApi="lollipop">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/googlesans"
                android:text="@string/default_card_title"
                android:textColor="@color/primaryText"
                android:textSize="24sp"
                android:padding="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/googlesans"
                android:text="@string/default_card_moradores"
                android:textSize="16sp"
                android:paddingBottom="4dp"
                android:paddingStart="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/googlesans"
                android:text="@string/default_card_interessados"
                android:textSize="16sp"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#abc"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/googlesans"
                android:text="@string/default_price"
                android:textColor="@color/primaryText"
                android:textSize="20sp"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"
                android:paddingStart="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/googlesans"
                android:text="@string/default_comodos"
                android:textColor="@color/primaryText"
                android:textSize="16sp"
                android:paddingBottom="4dp"
                android:paddingStart="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/googlesans"
                android:text="@string/default_short_description"
                android:textColor="@color/primaryText"
                android:textSize="16sp"
                android:paddingBottom="4dp"
                android:paddingStart="8dp"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/googlesans"
                android:text="@string/tenho_interesse" />

        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="32dp"
            android:paddingBottom="8dp"
            android:orientation="vertical"
            android:elevation="4dp"
            android:background="@color/white"
            tools:targetApi="lollipop">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/googlesans"
                android:text="@string/default_card_title"
                android:textColor="#333"
                android:textSize="24sp"
                android:padding="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/googlesans"
                android:text="@string/default_card_moradores"
                android:textSize="16sp"
                android:paddingBottom="4dp"
                android:paddingStart="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/googlesans"
                android:text="@string/default_card_interessados"
                android:textSize="16sp"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#abc"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/googlesans"
                android:text="@string/default_price"
                android:textColor="@color/primaryText"
                android:textSize="20sp"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"
                android:paddingStart="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/googlesans"
                android:text="@string/default_comodos"
                android:textColor="@color/primaryText"
                android:textSize="16sp"
                android:paddingBottom="4dp"
                android:paddingStart="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/googlesans"
                android:text="@string/default_short_description"
                android:textColor="@color/primaryText"
                android:textSize="16sp"
                android:paddingBottom="4dp"
                android:paddingStart="8dp"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/googlesans"
                android:text="@string/tenho_interesse" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>