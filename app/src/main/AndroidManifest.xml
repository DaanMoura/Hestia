<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ufscar.mobile.hestiaapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".cenarios.main.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/MainTheme.NoActionBar" />
        <activity
            android:name=".cenarios.info_imovel.InfoImovelActivity"
            android:label="Detalhes"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".cenarios.perfil.PerfilActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".cenarios.splash_screen.SplashScreenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MainTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".cenarios.meus_imoveis.MeusImoveisActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MainTheme.NoActionBar" />
        <activity
            android:name=".cenarios.cadastra_imovel.CadastraImovelActivity"
            android:label="Cadastro"
            android:screenOrientation="portrait" />
        <activity
            android:name=".cenarios.favoritos.FavoritosActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MainTheme.NoActionBar" />
        <activity
            android:screenOrientation="portrait"
            android:name=".cenarios.contato.ContatoActivity"
            android:label="Contato">
            <intent-filter>
                <action android:name="android.intent.action.SENDTO" />
                <data android:scheme="mailto" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>
    </application>

</manifest>